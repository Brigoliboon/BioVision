<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BioVision" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
         <item name="colorPrimary">@color/primary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="textFillColor">@color/black</item>
        <item name="textOutlineColor">@color/black</item>
        <item name="android:textAppearanceButton">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.BioVision" parent="Base.Theme.BioVision" />
    <style name="Theme.TransparentStatusBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Other theme attributes -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.BioVision.Fullscreen" parent="Theme.BioVision">
        <item name="android:actionBarStyle">@style/Widget.Theme.BioVision.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.BioVision.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
    
    <style name="dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>